<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranjapadrao">


    <ImageButton
        android:id="@+id/cadastrarbotao"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/laranjapadrao"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consultarbotao"
        app:srcCompat="@drawable/myfoodiconcadastrar" />

    <ImageButton
        android:id="@+id/consultarbotao"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/laranjapadrao"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/cadastrarbotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/myfoodiconconsultar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/consultarbotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myfood" />


</androidx.constraintlayout.widget.ConstraintLayout>